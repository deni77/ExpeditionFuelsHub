@model IEnumerable<UserServiceModel>

@{
    ViewBag.Title = "All Users";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th><label>Email</label></th>
            <th><label>Phone Number</label></th>
           <th><label>User is FDispenser</label></th>
          <th><label>Actions</label></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
                <tr>
                    <td><label>@user.Email</label></td>
                    <td><label>@user.PhoneNumber</label></td>
                    <td>
                    @if (string.IsNullOrEmpty(user.PhoneNumber) == false)
                    {
                                <label>✔</label>
                    }
                    else
                    {
                                <label class="text-center">❌</label>
                    }
                    </td>
                    <td>
                        <form asp-area="Admin" asp-controller="User" asp-action="Forget" asp-route-userId="@user.UserId"  method="post">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
        }
    </tbody>
</table>
