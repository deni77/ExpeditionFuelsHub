@model VehicleModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
                  <input type="hidden" asp-for="@Model.Id" />
            <div class="form-group">
                <label asp-for="RegistrationNumber"></label>
                <input asp-for="RegistrationNumber" class="form-control" placeholder="RegistrationNumber...">
                <span asp-validation-for="RegistrationNumber" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleRegistrationDocumentNumber"></label>
                 <input asp-for="VehicleRegistrationDocumentNumber" class="form-control" placeholder="VehicleRegistrationDocumentNumber...">
                <span asp-validation-for="VehicleRegistrationDocumentNumber" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
            <partial name="_ValidationScriptsPartial" />
}