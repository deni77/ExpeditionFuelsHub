@model DetailsBillLadingViewModel

@{
    ViewBag.Title = "BillLading Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container" style="display:inline">
    <div class="row">
        <div class="col-4">
            <img class="card-img-top" style="width: 20rem;"
                 src="@Model.ImageUrl" alt="House Image">
        </div>
        <div class="card col-8 border-0">
            <p style="font-size:25px;">Mass: <u>@Model.Mass</u></p>
             <p style="font-size:25px;">GrossStandardVolume: <u>@Model.GrossStandardVolume</u></p>
            <p>Purpose: <b>@Model.Purpose</b></p>
             <p>DistributionChannel: <b>@Model.DistributionChannel</b></p>
             <p>Product: <b>@Model.Product</b></p>
              <p>Vehicle: <b>@Model.Vehicle</b></p>
           
                        
            <div class="form-inline">
                @if (this.User.Identity.IsAuthenticated)
                {
                        <a class="btn btn-warning" asp-controller="BillLading" asp-action="Edit"
                       asp-route-id="@Model.Id">Edit</a>
                            <a class="ml-2 btn btn-danger" asp-controller="BillLading" asp-action="Delete"
                       asp-route-id="@Model.Id">Delete</a>
                    }
            </div>
            <p></p>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">FDispenser Info</h5>
                    <p class="card-text">Email: <b>@Model.FDispenser.Email</b> </p>
                    <p class="card-text">Phone Number: <b>@Model.FDispenser.PhoneNumber</b> </p>
                </div>
            </div>
        </div>
    </div>
</div>
